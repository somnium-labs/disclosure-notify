{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "strictPropertyInitialization": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "outDir": "dist"
    },
    "include": ["src/**/*.ts", "src/**/*.spec.ts"],
    "exclude": ["node_modules"]
}
